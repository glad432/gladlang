PRINTLN "--- Function Tester ---"

# Define a function that adds two numbers and returns the result
DEF add(a, b)
  PRINTLN "Running function 'add'..."
  LET result = a + b
  RETURN result
ENDDEF

# Define a function with no return (it will return NULL)
DEF say_hello(name)
  PRINTLN "Hello, " + name
ENDDEF

# --- Test Function 1 (with RETURN) ---
PRINTLN "Calling add(10, 5)..."
LET sum = add(10, 5)
PRINTLN "Result of add: " + sum
PRINTLN "sum * 2 = " + (sum * 2)

# --- Test Function 2 (no RETURN) ---
PRINTLN "Calling say_hello('World')..."
LET greeting_result = say_hello("World")
PRINTLN "Result of say_hello: " + greeting_result # This should be NULL (0)