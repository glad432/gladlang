PRINTLN "--- FOR Loop Tester ---"

LET my_list = ["apple", "banana", "STOP", "cherry", "date"]
PRINTLN "Iterating over list: " + STR(my_list)

PRINTLN "--- Test 1: Full Iteration ---"
FOR item IN my_list
  PRINTLN "Item: " + item
ENDFOR

PRINTLN "--- Test 2: FOR loop with BREAK ---"
PRINTLN "Looping until we find 'STOP'..."
FOR item IN my_list
  IF item == "STOP" THEN
    PRINTLN "Found STOP, breaking loop."
    BREAK
  ENDIF
  PRINTLN "Item: " + item
ENDFOR

PRINTLN "--- Test 3: FOR loop with CONTINUE ---"
PRINTLN "Looping, but skipping 'STOP'..."
FOR item IN my_list
  IF item == "STOP" THEN
    PRINTLN "(Skipping an item)"
    CONTINUE
  ENDIF
  PRINTLN "Item: " + item
ENDFOR

PRINTLN "--- Test 4: Local C-Style FOR Loop ---"
FOR (LET I = 0; I < 5; I++)
    PRINT "Local I: " + STR(I) + " | "
ENDFOR

PRINTLN "\n\n--- Test 5: Global C-Style FOR Loop ---"
LET X = 0
FOR (X = 0; X < 3; X++)
    PRINTLN "Global X inside loop: " + STR(X)
ENDFOR
PRINTLN "Global X outside loop: " + STR(X)

PRINTLN "\n--- Testing Old Iterator Loop ---"
FOR Y IN [10, 20, 30]
    PRINTLN "Iterator Y: " + STR(Y)
ENDFOR