PRINTLN "--- Inherited THIS Tester ---"

CLASS Pet
  DEF Pet(name)
    THIS.name = name
  ENDDEF
  
  # This method uses THIS
  DEF get_name()
    RETURN THIS.name
  ENDDEF
  
  DEF speak()
    PRINTLN THIS.name + " says ???"
  ENDDEF
ENDCLASS

CLASS Dog INHERITS Pet
  # No init, so it uses Pet's init
  
  # Override speak
  DEF speak()
    PRINTLN THIS.name + " says Woof!"
  ENDDEF
  
  # This class does NOT override get_name
ENDCLASS

PRINTLN "Creating dog..."
LET d = NEW Dog("Fido")

PRINTLN "Calling d.speak()..."
d.speak() # This uses the Dog's overridden method

PRINTLN "Calling d.get_name()..."
LET dog_name = d.get_name() # This uses the Pet's inherited method
PRINTLN "Result from get_name (should be Fido): " + dog_name