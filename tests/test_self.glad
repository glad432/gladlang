PRINTLN "--- THIS Keyword Tester ---"

CLASS Counter
  DEF Counter()
    THIS.count = 0
  ENDDEF
  
  # A helper method
  DEF _increment()
    THIS.count = THIS.count + 1
  ENDDEF
  
  # A public method that calls another method using THIS
  DEF add_two()
    PRINTLN "Adding two..."
    THIS._increment() # Call 1
    THIS._increment() # Call 2
  ENDDEF
  
  DEF get_count()
    RETURN THIS.count
  ENDDEF
ENDCLASS

PRINTLN "Creating counter..."
LET c = NEW Counter()
PRINTLN "Initial count: " + c.get_count() # Should be 0

PRINTLN "Calling add_two..."
c.add_two()
PRINTLN "Count after add_two: " + c.get_count() # Should be 2

PRINTLN "Calling add_two again..."
c.add_two()
PRINTLN "Count after second add_two: " + c.get_count() # Should be 4