PRINTLN "--- Testing Switch Case Feature ---"

# Test 1: Basic Matching
PRINTLN "\n1. Testing Basic Match (Expected: 'Value is 10')"
LET a = 10
SWITCH a
    CASE 5:
        PRINTLN "Value is 5"
    CASE 10:
        PRINTLN "Value is 10"
    DEFAULT:
        PRINTLN "Value is unknown"
ENDSWITCH

# Test 2: Default Case
PRINTLN "\n2. Testing Default Case (Expected: 'Value is unknown')"
LET b = 99
SWITCH b
    CASE 1:
        PRINTLN "Value is 1"
    CASE 2:
        PRINTLN "Value is 2"
    DEFAULT:
        PRINTLN "Value is unknown"
ENDSWITCH

# Test 3: Expressions in Cases
PRINTLN "\n3. Testing Expressions (Expected: 'Matched 5 + 5')"
LET c = 10
SWITCH c
    CASE 2 * 3:
        PRINTLN "Matched 2 * 3"
    CASE 5 + 5:
        PRINTLN "Matched 5 + 5"
    DEFAULT:
        PRINTLN "No match"
ENDSWITCH

# Test 4: Nested Switches
PRINTLN "\n4. Testing Nested Switches (Expected: 'Outer A', 'Inner B')"
LET x = "A"
LET y = "B"

SWITCH x
    CASE "A":
        PRINTLN "Outer A"
        SWITCH y
            CASE "A":
                PRINTLN "Inner A"
            CASE "B":
                PRINTLN "Inner B"
            DEFAULT:
                PRINTLN "Inner Default"
        ENDSWITCH
    DEFAULT:
        PRINTLN "Outer Default"
ENDSWITCH

PRINTLN "\n--- Testing Multi-Case Match ---"

LET x = 2

SWITCH x
    CASE 1, 2, 3:
        PRINTLN "x is 1, 2, or 3 (Small Number)"
    CASE 4, 5, 6:
        PRINTLN "x is 4, 5, or 6 (Medium Number)"
    DEFAULT:
        PRINTLN "x is large"
ENDSWITCH

PRINTLN "\n--- Testing Strings ---"
LET s = "apple"

SWITCH s
    CASE "banana", "orange":
        PRINTLN "It's a common fruit"
    CASE "apple", "pear":
        PRINTLN "It's a pome fruit"
    DEFAULT:
        PRINTLN "Unknown fruit"
ENDSWITCH

PRINTLN "\n--- End of Tests ---"