PRINTLN "--- Type Casting Tester ---"
PRINTLN "Enter a number (e.g., 123.5):"
LET num_str = INPUT() # e.g., "123.5"

PRINTLN "--- Conversions ---"
LET num_int = INT(num_str)
LET num_float = FLOAT(num_str)

PRINTLN "String as INT: " + num_int
PRINTLN "String as FLOAT: " + num_float
PRINTLN "FLOAT as STR: " + STR(num_float)

PRINTLN "--- Math Test ---"
LET result = num_int * 2
PRINTLN "INT * 2 = " + result

LET result = num_float * 2
PRINTLN "FLOAT * 2 = " + result

PRINTLN "--- Error Test ---"
PRINTLN "Attempting to cast 'hello' to INT..."
LET error_test = INT("hello") # This line should crash

PRINTLN "This line should NOT be printed."