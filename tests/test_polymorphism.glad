PRINTLN "--- Polymorphism Tester ---"

CLASS Pet
  DEF Pet(name)
    THIS.name = name
  ENDDEF
  
  # This method is NOT overridden by Dog or Cat
  DEF introduce()
    PRINTLN "My name is " + THIS.name + ". I am a pet and I say:"
    # This call to THIS.speak() should use the
    # child's version if it exists.
    THIS.speak()
  ENDDEF
  
  DEF speak()
    PRINTLN "(Generic pet sound)"
  ENDDEF
ENDCLASS

CLASS Dog INHERITS Pet
  # Override speak
  DEF speak()
    PRINTLN "Woof!"
  ENDDEF
ENDCLASS

CLASS Cat INHERITS Pet
  # Override speak
  DEF speak()
    PRINTLN "Meow!"
  ENDDEF
ENDCLASS

PRINTLN "--- Creating Dog ---"
LET my_dog = NEW Dog("Buddy")
my_dog.introduce() # This calls Pet.introduce, which should call Dog.speak

PRINTLN "--- Creating Cat ---"
LET my_cat = NEW Cat("Whiskers")
my_cat.introduce() # This calls Pet.introduce, which should call Cat.speak