PRINTLN "--- DEEP NESTING & LOGIC TEST ---"

LET x = 10
LET y = 20
LET z = 30
LET flag = TRUE

PRINTLN "Values: x=" + x + ", y=" + y + ", z=" + z

# -------------------------------------------------
# TEST 1: Triple Nesting (Nested-Nested)
# -------------------------------------------------
PRINTLN ""
PRINTLN "[TEST 1] Triple Nesting Check:"

IF x == 10 THEN
    PRINTLN "  L1: x is 10 (Correct)"
    
    # Level 2
    IF y == 20 THEN
        PRINTLN "    L2: y is 20 (Correct)"
        
        # Level 3 (Nested-Nested)
        IF z == 30 THEN
            PRINTLN "      L3: z is 30 (TARGET REACHED!)"
        ELSE
            PRINTLN "      L3: z is wrong"
        ENDIF

    ELSE
        PRINTLN "    L2: y is wrong"
    ENDIF
ELSE
    PRINTLN "  L1: x is wrong"
ENDIF

# -------------------------------------------------
# TEST 2: Complex ELSE IF with Nesting
# -------------------------------------------------
PRINTLN ""
PRINTLN "[TEST 2] ELSE IF Chains with Nesting:"

LET score = 75

IF score >= 90 THEN
    PRINTLN "  Grade A"
ELSE IF score >= 80 THEN
    PRINTLN "  Grade B"
ELSE IF score >= 70 THEN
    PRINTLN "  Grade C (Correct)"
    
    # Nesting inside an ELSE IF block
    IF score < 78 THEN
        PRINTLN "    (Close to B, but not quite)"
        
        # Another nest
        IF flag THEN
           PRINTLN "      (Flag is also TRUE)"
        ENDIF
    ENDIF
ELSE
    PRINTLN "  Grade F"
ENDIF

# -------------------------------------------------
# TEST 3: Logic inside ELSE blocks
# -------------------------------------------------
PRINTLN ""
PRINTLN "[TEST 3] Nesting inside ELSE:"

LET a = 5

IF a > 10 THEN
    PRINTLN "  a > 10"
ELSE
    PRINTLN "  a is small (Correct)"
    
    # Nesting inside ELSE
    IF a == 5 THEN
        PRINTLN "    a is exactly 5 (Correct)"
    ELSE
        PRINTLN "    a is not 5"
    ENDIF
ENDIF

# -------------------------------------------------
# TEST 4: Boolean Soup
# -------------------------------------------------
PRINTLN ""
PRINTLN "[TEST 4] Boolean Logic + Nesting:"

IF (x == 10 AND y == 20) OR z == 999 THEN
    PRINTLN "  Complex condition TRUE (Correct)"
    
    IF NOT flag THEN
        PRINTLN "    Flag is False"
    ELSE
        PRINTLN "    Flag is True (Correct)"
    ENDIF
ELSE
    PRINTLN "  Complex condition FALSE"
ENDIF

PRINTLN ""
PRINTLN "--- END OF TEST ---"