PRINTLN "--- BOOL Casting Tester ---"
PRINTLN "NOTE: 1 is TRUE, 0 is FALSE"

PRINTLN "BOOL(123) = " + BOOL(123)     # Number (True)
PRINTLN "BOOL(-1) = " + BOOL(-1)      # Number (True)
PRINTLN "BOOL(0) = " + BOOL(0)        # Number (False)
PRINTLN "BOOL(0.5) = " + BOOL(0.5)    # Number (True)
PRINTLN "BOOL(0.0) = " + BOOL(0.0)    # Number (False)

PRINTLN "BOOL(\"hello\") = " + BOOL("hello") # String (True)
PRINTLN "BOOL(\"0\") = " + BOOL("0")       # String (True)
PRINTLN "BOOL(\"\") = " + BOOL("")         # String (False)

PRINTLN "BOOL(TRUE) = " + BOOL(TRUE)   # Built-in (True)
PRINTLN "BOOL(FALSE) = " + BOOL(FALSE) # Built-in (False)
PRINTLN "BOOL(NULL) = " + BOOL(NULL)   # Built-in (False)

PRINTLN "BOOL(INPUT) = " + BOOL(INPUT) # Function (True)

IF BOOL("") THEN
  PRINTLN "This should NOT print."
ENDIF

IF BOOL("hello") THEN
  PRINTLN "This SHOULD print."
ENDIF